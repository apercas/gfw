
<ul class="button-container">
  <li><a class="btn gray uppercase little download-mobile-link" target="_blank" href="http://data.globalforestwatch.org/datasets?q=country{{iso}}">Country data</a></li>
  <li><a class="btn gray uppercase little" href="/country/{{iso}}">Country profile</a></li>
</ul>
{{#if country}}
  {{#if country.indepth}}
    <ul class="button-container one">
      {{#if isSpecialAtlas}}
        <li><a href="{{country.indepth}}" target="_blank" class="btn green lines uppercase mobile-friendly"><span>WRI in {{country.name}}</span></a></li>
      {{else}}
        <li><a href="{{country.indepth}}" target="_blank" class="btn green lines uppercase mobile-friendly"><span>Visit forest atlas</span></a></li>
    {{/if}}
    </ul>
  {{/if}}
{{/if}}
